<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="hand">
  <xacro:macro name="hand" params="connected_to:='' ns:='' rpy:='0 0 0' xyz:='0 0 0' ">
    <xacro:unless value="${connected_to == ''}">
      <joint name="${ns}_hand_joint" type="fixed">
        <parent link="${connected_to}"/>
        <child link="${ns}_hand"/>
        <origin xyz="${xyz}" rpy="${rpy}"/>
      </joint>
    </xacro:unless>

    <link name="${ns}_hand">
      <visual>
        <geometry>
          <mesh filename="package://panda_sim_description/meshes/franka_panda/visual/hand.dae"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://panda_sim_description/meshes/franka_panda/collision/hand.stl"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="-0.000025 0.005735 0.103826" rpy="0 0 0"/>
          <mass value="0.73"/>
          <inertia
            ixx="0.001405" ixy="0.0"    ixz="0.0"
                        iyy="0.000202" iyz="0.0"
                                     izz="0.001293"/>
      </inertial>
    </link>

  <gazebo reference="${ns}_hand">
      <mu1>100.0</mu1>
      <mu2>100.0</mu2>
    </gazebo>

    <link name="${ns}_leftfinger">
      <visual>
        <geometry>
          <mesh filename="package://panda_sim_description/meshes/franka_panda/visual/finger.dae"/>
        </geometry>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://panda_sim_description/meshes/franka_panda/collision/finger.stl"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0.000002  0.014564 0.022794" rpy="0 0 0"/>
          <mass value="1.1e-3"/>
          <inertia
            ixx="0.00000338" ixy="0"          ixz="0"
                             iyy="0.00000332" iyz="0.0000006"
                                              izz="0.00000078"/>
      </inertial>
    </link>

    <gazebo reference="${ns}_leftfinger">
      <mu1>100.0</mu1>
      <mu2>100.0</mu2>
    </gazebo>

    <link name="${ns}_rightfinger">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 ${pi}"/>
        <geometry>
          <mesh filename="package://panda_sim_description/meshes/franka_panda/visual/finger.dae"/>
        </geometry>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 ${pi}"/>
        <geometry>
          <mesh filename="package://panda_sim_description/meshes/franka_panda/collision/finger.stl"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0.000002  0.014564 0.022794" rpy="0 0 ${pi}"/>
          <mass value="1.1e-3"/>
          <inertia
            ixx="0.00000338" ixy="0"          ixz="0"
                             iyy="0.00000332" iyz="0.0000006"
                                              izz="0.00000078"/>
      </inertial>
    </link>

    <gazebo reference="${ns}_rightfinger">
      <mu1>100.0</mu1>
      <mu2>100.0</mu2>
    </gazebo>

    <joint name="${ns}_finger_joint1" type="prismatic">
      <parent link="${ns}_hand"/>
      <child link="${ns}_leftfinger"/>
      <origin xyz="0 0 0.0584" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit effort="20" lower="-0.001" upper="0.04" velocity="0.3"/>
      <dynamics damping="0.0" friction="1.0"/>
    </joint>

    <transmission name="${ns}_finger_joint1_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${ns}_finger_joint1">
        <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      </joint>
      <actuator name="${ns}_finger_joint1_motor">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

    <joint name="${ns}_finger_joint2" type="prismatic">
      <parent link="${ns}_hand"/>
      <child link="${ns}_rightfinger"/>
      <origin xyz="0 0 0.0584" rpy="0 0 0"/>
      <axis xyz="0 -1 0"/>
      <limit effort="20" lower="-0.001" upper="0.04" velocity="0.3"/>
      <dynamics damping="0.0" friction="1.0"/>
    </joint>

    <transmission name="${ns}_finger_joint2_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="${ns}_finger_joint2">
        <hardwareInterface>hardware_interface/PositionJointInterface</hardwareInterface>
      </joint>
      <actuator name="${ns}_finger_joint2_motor">
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>

  </xacro:macro>
</robot>
